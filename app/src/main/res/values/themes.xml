<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GurtamTest" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="TextView.Parent" parent="Base.Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextView.Header" parent="TextView.Parent">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="TextView.SmallHeader" parent="TextView.Parent">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextView.MediumTextSize" parent="TextView.Parent">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextView.SmallText" parent="TextView.Parent">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="CardView.Round" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">4dp</item>
    </style>

</resources>